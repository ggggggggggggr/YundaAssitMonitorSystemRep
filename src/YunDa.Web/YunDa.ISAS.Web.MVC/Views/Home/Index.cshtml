@using YunDa.ISAS.Core;
@{
    Layout = null;
    ViewData["Title"] = "首页";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit">

    <title>智能变电站辅助系统 - 主页</title>
    <meta name="keywords" content="智能变电站辅助系统">
    <meta name="description" content="智能变电站辅助系统是一个完全响应式，基于Bootstrap3最新版本开发的扁平化主题，她采用了主流的左右两栏式布局，使用了Html5+CSS3等现代技术">
    <link rel="shortcut icon" href="favicon.ico">
    <link href="~/css/bootstrap.min.css?v=3.3.7" rel="stylesheet">
    <link href="~/css/font-awesome.min.css?v=4.7" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css?v=@DateTime.Now.Ticks" rel="stylesheet">
</head>

<body class="fixed-sidebar full-height-layout blue-bg " style="overflow:hidden">
    <div id="wrapper" class="skin-1">
        <!--左侧导航开始-->
        <nav class="navbar-default navbar-static-side" style="height:auto; z-index:3000;">
            <div class="nav-header" style="padding:4px;height:100px;">
                <div class="dropdown profile-element row" style="height:100%; padding-top:15px;">
                    <div class="col-sm-5" style="padding:5px;text-align:right">
                        <span><i class='fa fa-user-md' style='font-size:50px;'></i></span>
                    </div>
                    <div class="col-sm-7" style="padding:5px 0 0 0;text-align:left;">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="clear">
                                <span class="block m-t-xs" style="font-size:18px;"><strong class="font-bold">@ViewData["UserName"]</strong></span>
                                <span class="text-muted text-xs block">超级管理员<b class="caret"></b></span>
                            </span>
                        </a>
                        <ul class="dropdown-menu animated fadeInRight m-t-xs">
                            <li>
                                <a class="J_menuItem" href="form_avatar.html">修改密码</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="/Account/Logout">安全退出</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="logo-element" style="height:100%;">
                    @*<img alt="image" class="img-responsive" src="~/img/logo-dq-simple.png" style="height:50px;margin:0 auto;" />*@
                    <span><i class='fa fa-user-md' style='font-size:35px;'></i></span>
                    @ViewData["UserName"]
                </div>
            </div>
        </nav>

        <nav class="navbar-default navbar-static-side" role="navigation" style="height:calc(100% - 139px);margin-top:100px;">
            <div class="sidebar-collapse" style="border-right: solid 2px #39aef5;height:100%;">
                <ul class="nav" id="side-menu">
                    <li>
                        <a class="J_menuItem" href="/Home/Test" data-index="0">
                            <i class="fa fa-home"></i>
                            <span class="nav-label">&nbsp;首页</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span class="nav-label">系统维护</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a class="J_menuItem" href="User/UserPage">
                                    <i class="fa fa-user"></i>
                                    <span class="nav-label">用户管理</span>
                                </a>
                            </li>
                            @*<li>
                                    <a class="J_menuItem" href="/Role/Role">
                                        <i class="fa fa-user-secret"></i>
                                        <span class="nav-label">角色设置</span>
                                    </a>
                                </li>*@
                            <li>
                                <a class="J_menuItem" href="/SysFunction/SysFunction">
                                    <i class="fa fa-archive"></i>
                                    <span class="nav-label">系统功能</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-info-circle"></i>
                            <span class="nav-label">基本信息</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a class="J_menuItem" href="/TranSubstation/TranSubstation">
                                    <i class="fa fa-train"></i>
                                    <span class="nav-label">场站信息</span>
                                </a>
                            </li>
                            <li>
                                <a class="J_menuItem" href="/ManufacturerInfo/ManufacturerInfo">
                                    <i class="fa fa-building"></i>
                                    <span class="nav-label">厂商信息</span>
                                </a>
                            </li>
                            <li>
                                <a class="J_menuItem" href="/EquipmentType/EquipmentType">
                                    <i class="fa fa-bookmark"></i>
                                    <span class="nav-label">设备类型</span>
                                </a>
                            </li>
                            <li>
                                <a class="J_menuItem" href="/EquipmentInfo/EquipmentInfo">
                                    <i class="fa fa-tag"></i>
                                    <span class="nav-label">设备信息</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa fa-file-video-o"></i>
                            <span class="nav-label">视频监控</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a class="J_menuItem" href="/VideoDevice/VideoDevice">
                                    <i class="fa fa-video-camera"></i>
                                    <span class="nav-label">
                                        视频设备
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a class="J_menuItem" href="/VideoDevEquipmentInfo/VideoDevEquipmentInfo">
                                    <i class="fa fa-leaf"></i>
                                    <span class="nav-label">
                                        监控位置
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a class="J_menuItem" href="/VideoInspection/VideoInspection">
                                    <i class="fa fa-binoculars"></i>
                                    <span class="nav-label">
                                        巡检配置
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
        <!--左侧导航结束-->
        <!--右侧部分开始-->
        <div id="page-wrapper" class="blue-bg dashbard-1" style="height:calc(100% - 39px)">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0;margin-top:0;background: url('/css/patterns/header-profile-skin-1.png');">
                    <div class="navbar-header" style="padding:2px 0px;margin:0px;height:58px;">
                        <div class="form-group">
                            <p class="form-horizontal" style="font-family:'Microsoft YaHei';margin: 4px 0px 0px 8px;">
                                &nbsp;<img src="~/img/logo-dq-simple.png" style="height:50px;" />
                                &nbsp;&nbsp;<strong style="font-size:30px;vertical-align:middle;">交大运达电气</strong>
                                &nbsp;&nbsp;&nbsp;<strong style="font-size:26px;vertical-align:middle;color:#ffc107;">智能辅助监控管理系统</strong>
                            </p>
                        </div>
                    </div>
                    <div class="nav navbar-right">
                        <p style="font-size:16px;font-family:'Microsoft YaHei UI';margin: 20px 30px 0px 0px; color:white">
                            <a href="~/Account/Logout" class="btn btn-danger" style="margin-top:-5px;"><i class="fa fa-sign-out"></i> 退出</a>
                        </p>
                    </div>
                </nav>
            </div>
            <div class="row content-tabs">
                <button class="navbar-minimalize roll-nav roll-left" style="width:40px;">
                    <i class="fa fa-bars"></i>
                </button>
                <button class="roll-nav J_tabLeft" style="left:40px">
                    <i class="fa fa-backward"></i>
                </button>

                <nav class="page-tabs J_menuTabs">
                    <div class="page-tabs-content">
                        <a href="javascript:;" class="active J_menuTab" data-id="/Home/Test">首页</a>
                    </div>
                </nav>
                <button class="roll-nav roll-right J_tabRight">
                    <i class="fa fa-forward"></i>
                </button>
                <div class="btn-group roll-nav roll-right">
                    <button class="dropdown J_tabClose" data-toggle="dropdown">
                        关闭操作<span class="caret"></span>
                    </button>
                    <ul role="menu" class="dropdown-menu dropdown-menu-right">
                        <li class="J_tabShowActive">
                            <a>定位当前选项卡</a>
                        </li>
                        <li class="divider"></li>
                        <li class="J_tabCloseAll">
                            <a>关闭全部选项卡</a>
                        </li>
                        <li class="J_tabCloseOther">
                            <a>关闭其他选项卡</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row J_mainContent" id="content-main" style="height:calc(100% - 101px)">
                <iframe class="J_iframe" name="iframe0" style="width:100%;height:100%" src="~/Home/Test" frameborder="0" data-id="/Home/Test" seamless></iframe>
            </div>
        </div>
        <!--右侧部分结束-->
        <div class="footer blue-bg" style="background: url('/css/patterns/header-profile-skin-1.png');z-index:2002;">
            <div class="pull-right">
                &copy;成都运达科技股份有限公司版权所有&nbsp;&nbsp;&nbsp;&nbsp;地址：四川省成都市高新西区新达路11号&nbsp;&nbsp;&nbsp;&nbsp;版本 @AppVersionHelper.Version [@AppVersionHelper.ReleaseDate.ToString("yyyyMMdd")]
            </div>
        </div>
    </div>

    <!-- 全局js -->
    <script src="~/js/jquery-3.4.1.min.js?v=3.4.1" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js?v=3.3.6" type="text/javascript"></script>
    <script src="~/js/plugins/metisMenu/jquery.metisMenu.js" type="text/javascript"></script>
    <script src="~/js/plugins/slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="~/js/plugins/layer/layer.min.js" type="text/javascript"></script>
    <!-- 自定义js -->
    <script src="~/js/hplus.js?v=4.1.0" type="text/javascript"></script>
    <script src="~/js/contabs.js" type="text/javascript"></script>

    <!-- 第三方插件 -->
    <script src="~/js/plugins/pace/pace.min.js" type="text/javascript"></script>
